@model ChartViewModel

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

<canvas id="myChart" width="400" height="300" class="d-flex justify-content-center"></canvas>

<script>

        var lables = @Html.Raw(Json.Serialize(Model.Lables));
        var values = @Html.Raw(Json.Serialize(Model.Values));


        var ctx = document.getElementById('myChart').getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'line',

        // The data for our dataset
        data: {
            labels: lables,
            datasets: [{
                label: 'Product weight',
                backgroundColor: 'rgb(0, 168, 31)',
                borderColor: 'rgb(0, 168, 31)',
                data: values
            }]
        },

        // Configuration options go here
        options: {}
    });
</script>