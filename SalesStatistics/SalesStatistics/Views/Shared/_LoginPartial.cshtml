@using Microsoft.AspNetCore.Identity
@using SalesStatistics.DAL.Models
@using System.Security.Claims;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
</form>
        </li>
    </ul>
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-ticketStatus="1" asp-route-userName="@User.Identity.Name">
                <img src="~/img/icons/mytickets-light.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> My tickets
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">
                <img src="~/img/icons/" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> My orders
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">
                <img src="~/img/icons/orders-light.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> My orders
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">
                <img src="~/img/icons/user-info-light.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> User info
            </a>
        </li>
        @if (SignInManager.Context.User.IsInRole("Administrator"))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-controller="Admin" asp-action="Index">
                    <img src="~/img/icons/settings-light.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy">Admin panel
                </a>
            </li>
        }
    </ul>
}
else
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
</li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
</li>
    </ul>
}
