<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesStatistics</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body id="gradient">
    <header>
        <nav id="gradient" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light font-weight-bold text-dark bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/icons/sales-dark.svg" width="40" height="40" class="d-inline-block align-top" alt="" loading="lazy"> SalesStatistics
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="~/img/icons/home-dark.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index" asp-route-ticketStatus="1" asp-route-userName="@User.Identity.Name">
                                <img src="~/img/icons/box-dark.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> Products
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Clients" asp-action="Index">
                                <img src="~/img/icons/customer.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> Clients
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orders" asp-action="Index">
                                <img src="~/img/icons/orders-dark.svg" width="20" height="20" class="d-inline-block align-top" alt="" loading="lazy"> Orders
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="gradient" class="font-weight-bold border-top footer text-muted">
        <div class="container text-dark">
           &copy; 2021 - SalesStatistics - <a asp-area="" asp-controller="Home" asp-action="Privacy"> Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
